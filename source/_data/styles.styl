// 侧栏按钮样式
.sidebar-toggle {
    right: 30px;
    bottom: 43px;
    background-color: rgba(00, 150, 136, 0.75);
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
 
 
// 返回顶部按钮样式
.back-to-top {
    line-height: 1.5;
    right: 10px;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 2.5px;
    padding-bottom: 2.5px;
    background-color: rgba(00, 150, 136, 0.75);
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
.back-to-top.back-to-top-on {
    bottom: 43px;
}


// 设置滚动条的样式
// 参考https://segmentfault.com/a/1190000003708894
::-webkit-scrollbar {
    width: 5px;
    height: 5px;
}
// 滚动槽
::-webkit-scrollbar-track {
    background: rgb(220,220,220);
}
// 滚动条滑块
::-webkit-scrollbar-thumb {
    border-radius: 5px;
    background-color: #999;
}
::-webkit-scrollbar-thumb:hover {
    background-color: rgb(161, 102, 171);
}





